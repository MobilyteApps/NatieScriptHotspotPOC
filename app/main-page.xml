
<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" loaded="{{onLoad}}">


    <ActionBar title="My App" icon=""></ActionBar>

    <StackLayout class="p-20">
        <Label text="Tap the button" class="h1 text-center"/>
        <Button text="Hotspot On" tap="{{ onTap }}" class="-primary"/>
        <Button text="Hotspot Off" tap="{{ offTap }}" class="-primary"/>

        <Label text="{{ message }}" class="h2 text-center" textWrap="true"/>
    </StackLayout>
</Page>
